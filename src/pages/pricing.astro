---
import BaseLayout from "../layouts/BaseLayout.astro";
const page = {
  title: "Pricing",
  description: "Transparent telehealth pricing for Florida adults 18+. Simple Visit $65, Complex Visit $85, and 4‑pack $245."
};
---
<BaseLayout title={page.title} description={page.description}>
  <header style="text-align:center; margin-bottom:.5rem;">
    <h1 style="font-size: clamp(28px,4vw,42px); margin:.2rem 0;">Pricing</h1>
  </header>

  <section class="pricing-grid">
    <!-- Simple Visit -->
    <article class="price-card">
      <div class="img-wrap">
        <img src="/img/pricing-cough.png" alt="Simple Visit — stick figure coughing icon representing a single uncomplicated concern" />
      </div>
      <h3>Simple Visit <span class="price">$65</span></h3>
      <p class="note">Simple Visits include one condition/refill</p>
    </article>

    <!-- Complex Visit -->
    <article class="price-card">
      <div class="img-wrap">
        <img src="/img/pricing-multisymptom.jpg" alt="Complex Visit — grid of common symptoms representing multiple concerns" />
      </div>
      <h3>Complex Visit <span class="price">$85</span></h3>
      <p class="note">Complex Visits include 2 or more conditions/refills</p>
    </article>

    <!-- 4 Pack -->
    <article class="price-card">
      <div class="img-wrap">
        <img src="/img/pricing-calendar.png" alt="Pack of 4 Simple Visits — calendar with checkmarks showing four prepaid visits" />
      </div>
      <h3>Pack of 4 Simple Visits <span class="price">$245</span></h3>
      <p class="note">4 Simple Visits include one condition/refill per visit. Visits do not expire.</p>
    </article>
  </section>

  <div style="text-align:center; margin-top:1rem;">
    <a class="btn" href="/start-your-visit/">Start Your Visit</a>
  </div>

  <style>
    .pricing-grid {
      display:grid; grid-template-columns: repeat(3, minmax(0, 1fr)); gap: 1.25rem; align-items: start;
    }
    .price-card { text-align:center; }
    .img-wrap { display:flex; justify-content:center; align-items:center; background:#fff; border:1px solid #e6eaf0; border-radius: var(--radius); padding: 1rem; min-height: 280px; }
    .img-wrap img { max-width: 100%; height: auto; object-fit: contain; }
    .price-card h3 { font-size: clamp(18px,2.5vw,22px); margin:.6rem 0 .2rem; }
    .price { color: var(--brand); font-weight: 800; margin-left:.25rem; }
    .note { color: var(--muted); font-size: .95rem; margin:0; }
    @media (max-width: 980px) {
      .pricing-grid { grid-template-columns: 1fr; }
      .img-wrap { min-height: 220px; }
    }
  </style>
</BaseLayout>