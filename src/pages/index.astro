---
import BaseLayout from "../layouts/BaseLayout.astro";
const page = {
  title: "Home",
  description:
    "Florida's Most Convenient Telehealth — No Insurance Needed! Adults 18+, Florida residents only."
};
---
<BaseLayout title={page.title} description={page.description} bannerText="">
  <!-- TOP BANNER: big logo + links (with dark-mode logo swap) -->
  <section class="site-banner" aria-label="Site header">
    <a href="/" class="brand" aria-label="TeleMed Visits home">
      <!-- Light & Dark versions; dark one shows only in dark mode -->
      <img class="logo light" src="/img/logo.svg" alt="TeleMed Visits" width="auto" height="96" />
      <img class="logo dark"  src="/img/logo-inverse.svg" alt="TeleMed Visits" width="auto" height="96" />
    </a>

    <nav class="banner-nav" aria-label="Primary">
      <a href="/start-your-visit/">Start</a>
      <a href="/pricing/">Pricing</a>
      <a href="/what-we-treat/">What We Treat</a>
      <a href="/how-it-works/">How It Works</a>
      <a href="/faqs/">FAQs</a>
      <a href="/contact-us/">Contact</a>
    </nav>
  </section>

  <!-- HERO: centered headings on translucent stethoscope background -->
  <section class="hero-banner">
    <img
      src="/img/hero-stethoscope.png"
      alt="Stethoscope and smartphone — TeleMed Visits Florida telehealth services"
    />
    <div class="hero-copy">
      <h1>Welcome to Florida's Most Convenient Telehealth</h1>
      <p class="kicker">No Insurance Needed!</p>
      <p>No Matter Where You Are— We're Here To Help.</p>
      <p class="eligibility">
        <strong>Treatment for Adults 18+ years of age. Florida residents only.</strong>
      </p>
    </div>
  </section>

  <!-- Centered Carousel with the three people photos -->
  <section class="centered-carousel">
    <div class="carousel-frame">
      <div class="carousel-track">
        <img src="/img/carousel-man-desktop.png" alt="Adult man at home using desktop for an online doctor visit — Florida telehealth" />
        <img src="/img/carousel-older-pills.png" alt="Older adult reviewing medications during a secure video telemedicine visit — Florida" />
        <img src="/img/carousel-woman-car.png" alt="Woman in car starting a same-day telehealth appointment on her phone — Florida" />
      </div>
      <button class="nav prev" aria-label="Previous">‹</button>
      <button class="nav next" aria-label="Next">›</button>
    </div>
  </section>

