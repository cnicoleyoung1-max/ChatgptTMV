---
import BaseLayout from "../layouts/BaseLayout.astro";
const page = {
  title: "Home",
  description:
    "Florida's Most Convenient Telehealth — No Insurance Needed! Adults 18+, Florida residents only."
};
---
<BaseLayout title={page.title} description={page.description} bannerText="">
  <!-- HERO: edge-to-edge -->
  <section class="hero-banner full-bleed">
    <img
      src="/img/hero-stethoscope.png"
      alt="Stethoscope and smartphone — TeleMed Visits Florida telehealth services"
    />
    <div class="hero-copy">
      <h1>Welcome to Florida's Most Convenient Telehealth</h1>
      <p class="kicker">No Insurance Needed!</p>
      <p>No Matter Where You Are— We're Here To Help.</p>
      <p class="eligibility"><strong>Treatment for Adults 18+ years of age. Florida residents only.</strong></p>
    </div>
  </section>

  <!-- Carousel (keep centered; add full-bleed if you want edge-to-edge) -->
  <section class="centered-carousel">
    <div class="carousel-frame">
      <div class="carousel-track">
        <img src="/img/carousel-man-desktop.png" alt="Adult man at home using desktop for an online doctor visit — Florida telehealth" />
        <img src="/img/carousel-older-pills.png" alt="Older adult reviewing medications during a secure video telemedicine visit — Florida" />
        <img src="/img/carousel-woman-car.png" alt="Woman in car starting a same-day telehealth appointment on her phone — Florida" />
      </div>
      <button class="nav prev" aria-label="Previous">‹</button>
      <button class="nav next" aria-label="Next">›</button>
    </div>
  </section>

  <style>
    /* ===== HERO ===== */
    .hero-banner { position: relative; overflow:hidden; border-bottom: 1px dashed #e3e7ee; }
    .hero-banner img {
      width:100%; height:min(42vh, 360px); object-fit:cover; display:block;
      filter: opacity(.9) saturate(105%);
    }
    .hero-banner::after { content:""; position:absolute; inset:0;
      background: linear-gradient(0deg, rgba(0,183,255,.14), rgba(0,255,170,.10));
    }
    .hero-copy { position:absolute; inset:0; display:grid; place-items:center; text-align:center; color:#0b2242; }
    .hero-copy h1 { font-size: clamp(18px, 2.4vw, 20px); font-weight:700; margin:.5rem 0 .25rem; }
    .hero-copy .kicker { color:#0b2242; font-weight:800; text-decoration: underline; text-underline-offset: 3px; }
    .hero-copy p { margin:.2rem 0; }
    .hero-copy .eligibility { font-size:.9rem; color:#223655; }
    @media (min-width: 900px) { .hero-copy h1 { font-size: 20px; } }

    /* ===== CAROUSEL ===== */
    .centered-carousel { display:flex; justify-content:center; padding: 1rem 0; }
    .carousel-frame {
      position: relative; width:min(700px, 92%); overflow:hidden;
      border:1px solid #e5e7eb; border-radius: var(--radius);
      box-shadow: 0 4px 16px rgba(0,0,0,.06);
    }
    .carousel-track { display:flex; transition: transform .35s ease; width:300%; }
    .carousel-track img { width:100%; aspect-ratio:16/9; object-fit:cover; flex:0 0 100%; display:block; }
    .nav {
      position:absolute; top:50%; transform:translateY(-50%); width:36px; height:36px; border-radius:999px;
      border:1px solid #d1d5db; background:#fff; display:grid; place-items:center; cursor:pointer;
      box-shadow:0 2px 10px rgba(0,0,0,.06);
    }
    .nav.prev{ left:8px; } .nav.next{ right:8px; }
  </style>

  <script is:inline>
    // tiny carousel logic
    (function(){
      const frame = document.querySelector('.carousel-frame');
      if (!frame) return;
      const track = frame.querySelector('.carousel-track');
      const slides = track?.querySelectorAll('img') || [];
      const prev = frame.querySelector('.nav.prev');
      const next = frame.querySelector('.nav.next');
      let i = 0;
      function update(){ track.style.transform = `translateX(-${i * 100}%)`; }
      prev?.addEventListener('click', () => { i = (i - 1 + slides.length) % slides.length; update(); });
      next?.addEventListener('click', () => { i = (i + 1) % slides.length; update(); });
    })();
  </script>
</BaseLayout>
