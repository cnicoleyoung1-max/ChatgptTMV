---
import BaseLayout from "../layouts/BaseLayout.astro";
const page = {
  title: "Home",
  description: "Florida's most convenient telehealth — no insurance needed. Adults 18+, Florida residents only."
};
---
<BaseLayout title={{page.title}} description={{page.description}} bannerText="">
  <!-- HERO: centered headings on translucent stethoscope background -->
  <section class="hero-banner">
    <img src="/img/hero-stethoscope.png" alt="Stethoscope and smartphone — TeleMed Visits Florida telehealth services" />
    <div class="hero-copy">
      <h1>Welcome to Florida's most convenient Telehealth</h1>
      <p class="kicker">No Insurance Needed!</p>
      <p>Home, Work, or On‑The‑Go — we're here to help.</p>
      <p class="eligibility"><strong>Treatment for adults 18+ years of age. Florida residents only.</strong></p>
    </div>
  </section>
  <style>
    .hero-banner { position: relative; overflow:hidden; border-bottom: 1px dashed #e3e7ee; }
    .hero-banner img { width:100%; height:min(42vh, 360px); object-fit: cover; display:block; filter: opacity(.9) saturate(105%); }
    .hero-banner::after { content:""; position:absolute; inset:0; background: linear-gradient(0deg, rgba(0,183,255,.14), rgba(0,255,170,.10)); }
    .hero-copy { position:absolute; inset:0; display:grid; place-items:center; text-align:center; color:#0b2242; }
    .hero-copy h1 { font-size: clamp(18px, 2.4vw, 20px); font-weight:700; margin:.5rem 0 .25rem; }
    .hero-copy .kicker { color:#0b2242; font-weight:800; text-decoration: underline; text-underline-offset: 3px; }
    .hero-copy p { margin:.2rem 0; }
    .hero-copy .eligibility { font-size:.9rem; color:#223655; }
    @media (min-width: 900px) {
      .hero-copy h1 { font-size: 20px; }
    }
  </style>

  
  <!-- Centered Carousel with the three people photos -->
  <section class="centered-carousel">
    <div class="carousel-frame">
      <div class="carousel-track">
        <img src="/img/carousel-man-desktop.png" alt="Adult man at home using desktop for an online doctor visit — Florida telehealth" />
        <img src="/img/carousel-older-pills.png" alt="Older adult reviewing medications during a secure video telemedicine visit — Florida" />
        <img src="/img/carousel-woman-car.png" alt="Woman in car starting a same‑day telehealth appointment on her phone — Florida" />
      </div>
      <button class="nav prev" aria-label="Previous">‹</button>
      <button class="nav next" aria-label="Next">›</button>
    </div>
  </section>
  <style>
    .centered-carousel { display:flex; justify-content:center; padding: 1rem 0; }
    .carousel-frame {
      position: relative; width:min(700px, 92%); overflow:hidden; border:1px solid #e5e7eb; border-radius: var(--radius);
      box-shadow: 0 4px 16px rgba(0,0,0,.06);
    }
    .carousel-track { display:flex; transition: transform .35s ease; }
    .carousel-track img { width:100%; height: 440px; object-fit: cover; flex: 0 0 100%; }
    .centered-carousel .nav {
      position:absolute; top:50%; transform: translateY(-50%);
      background: rgba(0,0,0,.4); color:#fff; border:none; width:36px; height:36px; border-radius: 999px; cursor:pointer;
    }
    .centered-carousel .prev { left:10px; }
    .centered-carousel .next { right:10px; }
    @media (max-width: 900px) {
      .carousel-track img { height: 280px; }
    }
  </style>
  <script is:inline>
    // Simple carousel logic
    (function() {
      const frame = document.querySelector('.carousel-frame');
      if (!frame) return;
      const track = frame.querySelector('.carousel-track');
      const slides = Array.from(track.children);
      let index = 0;
      function update() {
        const w = frame.clientWidth;
        track.style.transform = `translateX(${-index * w}px)`;
      }
      frame.querySelector('.prev').addEventListener('click', () => {
        index = (index - 1 + slides.length) % slides.length; update();
      });
      frame.querySelector('.next').addEventListener('click', () => {
        index = (index + 1) % slides.length; update();
      });
      window.addEventListener('resize', update);
      update();
    })();
  </script>

  <!-- Full-width dark band with centered BOOK NOW button -->
  <section class="cta-band">
    <a class="band-btn" href="/start-your-visit/">BOOK NOW</a>
  </section>
  <style>
    .cta-band {
      background:#3a3a3a; padding: .9rem 0; width:100%; margin: .5rem 0 1rem;
      text-align:center;
    }
    .band-btn {
      display:inline-block; padding:.6rem 1.1rem; background:#00b7ff; color:#fff; border-radius:6px; font-weight:700;
      border: 2px solid rgba(255,255,255,.35);
    }
  </style>

  <!-- Three icon features row -->
  <section class="features">
    <article class="feature">
      <img src="/img/feature-fast.jpg" alt="Fast and reliable virtual care — avoid urgent care waits" />
      <h3>Fast and Reliable</h3>
      <p>Avoids waits at Doctors Offices and Urgent Care</p>
    </article>
    <article class="feature">
      <img src="/img/feature-easy.jpg" alt="Easy access from phone or computer — schedule a telehealth visit in one click" />
      <h3>Easy Access</h3>
      <p>A Simple Click to Schedule. All You Need is a Phone or Computer</p>
    </article>
    <article class="feature">
      <img src="/img/feature-lowcost.jpg" alt="Low‑cost telehealth visits from $65 — affordable online care" />
      <h3>Low Cost</h3>
      <p>Our Affordable Visits Allow Anyone Access to Care. From just $65/visit*.</p>
    </article>
  </section>
  <style>
    .features {
      display:grid; grid-template-columns: repeat(3, minmax(0,1fr)); gap: 1rem; text-align:center;
    }
    .feature img { width: 86px; height: 86px; object-fit: contain; margin: 0 auto .5rem; filter: grayscale(100%); }
    .feature h3 { font-size: 16px; margin:.2rem 0; }
    .feature p { font-size: 12px; color: var(--muted); margin: 0 auto; max-width: 360px; }
    @media (max-width: 900px) {
      .features { grid-template-columns: 1fr; }
      .feature img { width:72px; height:72px; }
    }
  </style>
</BaseLayout>
