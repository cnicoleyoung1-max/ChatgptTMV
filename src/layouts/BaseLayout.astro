---
const { title = "TeleMed Visits", description = "", bannerText = "" } = Astro.props;
const nav = [
  { href: "/", text: "Home" },
  { href: "/what-we-treat/", text: "What We Treat" },
  { href: "/pricing/", text: "Pricing" },
  { href: "/how-it-works/", text: "How It Works" },
  { href: "/faqs/", text: "FAQâ€™s" },
  { href: "/start-your-visit/", text: "Start Your Visit" },
  { href: "/about-us/", text: "About Us" },
  { href: "/contact-us/", text: "Contact Us" },
];
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <link rel="icon" href="/favicon-32.png" sizes="32x32" />
    <link rel="icon" href="/favicon-16.png" sizes="16x16" />
    <meta name="theme-color" media="(prefers-color-scheme: light)" content="#ffffff" />
    <meta name="theme-color" media="(prefers-color-scheme: dark)" content="#0b2242" />
    <title>{title}</title>

    <style>
      :root{
        --bg:#ffffff; --text:#0b2242; --muted:#586781;
        --card:#ffffff; --surface:#f5f8fc; --border:#e6eaf0;
        --brand:#00b7ff; --brand-2:#00ffaa; --radius:16px; --pad:1rem;
        --h1: clamp(28px, 4vw, 42px); --h3: clamp(18px, 2.5vw, 22px);
        color-scheme: light dark;
      }
      @media (prefers-color-scheme: dark){
        :root{
          --bg:#0b2242; --text:#eaf2ff; --muted:#b9c6dc;
          --card:#10223a; --surface:#0f1f35; --border:#20324c;
        }
        .topbar { background:#0a9edc; }
      }

      *{ box-sizing:border-box; }
      body{ margin:0; font-family: system-ui, -apple-system, Segoe UI, Roboto, Inter, "ClashGrotesk", sans-serif; background:var(--bg); color:var(--text); }
      a{ color:inherit; text-decoration:none; }
      .container{ max-width:1100px; margin:0 auto; padding: 0 var(--pad); }

      /* Full-bleed utility for sections on pages */
      .full-bleed{ width:100vw; max-width:100vw; margin-left:calc(50% - 50vw); margin-right:calc(50% - 50vw); }

      /* Header */
      header.site{ display:flex; align-items:center; gap:.75rem; padding:.6rem var(--pad); border-bottom:1px solid var(--border); }
      .brand{ display:flex; align-items:center; gap:.6rem; }
      .brand img{ height:72px; }                 /* happy-medium */
      @media (max-width:1024px){ .brand img{ height:60px; } }
      @media (max-width:480px){ .brand img{ height:48px; } }
      .brand span{ font-weight:700; }
      @media (max-width:1100px){ .brand span{ display:none; } }

      nav{ margin-left:auto; display:flex; flex-wrap:wrap; gap:.6rem .9rem; }
      nav a{ padding:.45rem .4rem; font-weight:600; font-size:.95rem; line-height:1; opacity:.95; }
      nav a[aria-current="page"]{ border-bottom:3px solid currentColor; }

      .topbar{ background: var(--brand); text-align:center; padding:.35rem 0; }
      .topbar a{ display:inline-block; background:#fff; color:#0b2242; padding:.4rem .9rem; border-radius:999px; font-weight:700; }

      main{ min-height:60vh; }
      .card{ background:var(--card); border:1px solid var(--border); border-radius:var(--radius); padding:.8rem; }
      .grid{ display:grid; gap:1rem; }
      .grid-2{ grid-template-columns: 1fr 1fr; }
